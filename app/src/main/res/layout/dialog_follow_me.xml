<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="26dp">

    <TextView
        android:id="@+id/tvPeriod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="14sp"
        android:textColor="@color/md_black_1000"
        android:text="For"/>

    <EditText
        android:id="@+id/etPeriod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="36dp"
        android:inputType="number"
        android:layout_toEndOf="@+id/tvPeriod"
        android:layout_alignBaseline="@+id/tvPeriod"
        android:padding="6dp"/>

    <TextView
        android:id="@+id/tvPeriodUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/etPeriod"
        android:layout_toEndOf="@+id/etPeriod"
        android:textSize="14sp"
        android:textColor="@color/md_black_1000"
        android:text="days"/>

    <TextView
        android:id="@+id/tvReminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/md_black_1000"
        android:layout_marginTop="6dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/etPeriod"
        android:text="Notify me "/>

    <EditText
        android:id="@+id/etReminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="36dp"
        android:inputType="number"
        android:layout_toEndOf="@+id/tvReminder"
        android:layout_alignBaseline="@+id/tvReminder"
        android:padding="6dp"/>

    <TextView
        android:id="@+id/tvReminderUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/etReminder"
        android:layout_toEndOf="@+id/etReminder"
        android:textSize="14sp"
        android:textColor="@color/md_black_1000"
        android:text="minutes before"/>

    <Button
        android:id="@+id/btnFollow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvReminder"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="24dp"
        android:background="@drawable/rounded_button_no_backgorund"
        android:textColor="@color/md_orange_900"
        android:textSize="14sp"
        android:text="FOLLOW" />


</RelativeLayout>
