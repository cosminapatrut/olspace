<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    android:layout_marginTop="8dp"
    android:clipChildren="true"
    android:clipToPadding="true"
    android:background="@color/md_grey_100">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="96dp">

        <ImageView
            android:id="@+id/ivSatelliteIcon"
            android:layout_width="84dp"
            android:layout_height="96dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/satellite_generic"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_toEndOf="@+id/ivSatelliteIcon"
            android:gravity="center_vertical"
            android:padding="8dp">

        <TextView
            android:id="@+id/tvSatelliteId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/md_black_1000"
            android:textStyle="bold"
            android:padding="2dp"
            tools:text="ID: habjabs8687"/>

        <TextView
            android:id="@+id/tvSatelliteName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:padding="2dp"
            android:textColor="@color/md_black_1000"
            android:textStyle="bold"
            tools:text="Name VANGUARD R"/>

        <TextView
            android:id="@+id/tvSatelliteCoordinates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:padding="2dp"
            android:textColor="@color/md_black_1000"
            android:textStyle="bold"
            tools:text="Coordinates: 44.5 / 22.6"/>

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>
